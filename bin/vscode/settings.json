{
  // Workbench
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "workbench.colorCustomizations": {
    "editorIndentGuide.activeBackground": "#ff00ff",
    "editorIndentGuide.background": "#708090"
  },

  // General
  "prettier.tabWidth": 2,
  "emmet.triggerExpansionOnTab": true,
  "editor.guides.indentation": true,
  "npm.exclude": "",
  "explorer.confirmDelete": false,
  "vsicons.dontShowNewVersionMessage": true,
  "editor.detectIndentation": false,
  "files.trimTrailingWhitespace": true,
  "editor.inlineSuggest.enabled": true,
  "git.openRepositoryInParentFolders": "never",
  "files.associations": {
    "*.mdx": "markdown",
    "*helmfile*.yaml": "helm"
  },

  // Latex
  "latex-workshop.latex.tools": [
    {
      "command": "latexmk",
      "args": [
        "-interaction=nonstopmode",
        "-e",
        "$latex=q/platex %O -synctex=1 -interaction=nonstopmode -file-line-error %S/",
        "-e",
        "$bibtex=q/pbibtex %O %B/",
        "-e",
        "$biber=q/biber %O --bblencoding=utf8 -u -U --output_safechars %B/",
        "-e",
        "$makeindex=q/mendex %O -o %D %S/",
        "-e",
        "$dvipdf=q/dvipdfmx %O -o %D %S/",
        "-norc",
        "-pdfdvi",
        "%DOC%"
      ],
      "name": "latexmk"
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (tex to PDF)",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.dvi",
    "*.synctex.gz"
  ],
  // "[latex]": {
  //   "editor.tabSize": 2,
  //   "editor.defaultFormatter": "nickfode.latex-formatter",
  //   "editor.formatOnSave": true
  // },

  // Draw.io
  "hediet.vscode-drawio.local-storage": "",
  "hediet.vscode-drawio.theme": "dark",
  "hediet.vscode-drawio.offline": false,

  // Go
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },

  // HTML
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "html.format.contentUnformatted": "",
  "html.format.enable": true,
  "html.format.extraLiners": "head, body, /html",
  "html.format.indentHandlebars": false,
  "html.format.indentInnerHtml": false,
  "html.format.maxPreserveNewLines": null,
  "html.format.preserveNewLines": true,
  "html.format.unformatted": "wbr",
  "html.format.wrapAttributes": "auto",
  "html.format.wrapLineLength": 120,

  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "svipas.prettier-plus",
    "editor.formatOnSave": true
  },

  // CSS
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      "extensionName": ".css"
    }
  ],

  // JavaScript
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.insertSpaceAfterSemicolonInForStatements": false,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.linkedEditing": true,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.linkedEditing": true,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.linkedEditing": true,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JSON
  "[json]": {
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "json.schemas": [],

  // PHP
  "[php]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true
  },
  "[smarty]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "aswinkumar863.smarty-template-support",
    "editor.formatOnSave": true
  },

  // Terraform
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },

  // YAML
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true
  },
  "yaml.format.enable": true,
  "redhat.telemetry.enabled": true,
  "yaml.schemaStore.enable": false,

  // TOML
  "[toml]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "bodil.prettier-toml"
  },

  // PUML
  "plantuml.exportOutDir": ".",

  // Ansible
  "ansible.validation.lint.enabled": false,
  "[ansible]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Python
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true
  },
  "python.defaultInterpreterPath": "~/.asdf/shims/python3.11",
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "python.linting.pylintArgs": ["--generate-members"],

  // Django
  "[django-html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // SQL
  "[sql]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter",
    "editor.formatOnSave": true
  },

  // SQLite
  "workbench.editorAssociations": {
    "*.sqlite": "default"
  },

  // Kubernetes
  "vs-kubernetes": {
    "vscode-kubernetes.minikube-path.mac": "/Users/s20592/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
    "vscode-kubernetes.kubectl-path.mac": "/Users/s20592/.vs-kubernetes/tools/kubectl/kubectl"
  },

  // C/C++
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "code-runner.runInTerminal": true,
  "cmake.configureOnOpen": true,
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true
  },

  // ShellScript
  "[shellscript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true
  },
  "shellcheck.enable": false,

  // Ruby/Vagrant
  "[ruby]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "misogi.ruby-rubocop",
    "editor.formatOnSave": true
  },

  // Docker
  "[dockerfile]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-azuretools.vscode-docker",
    "editor.formatOnSave": true
  },

  // Copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  }
}
